<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Carvaan - Events</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <style>
      /* Binary hacker-style background */
      body {
        background: #0d0d0d;
        color: #ffffff;
        position: relative;
        overflow-x: hidden;
      }

      @keyframes binaryRain {
        0% {
          transform: translateY(-100%);
          opacity: 0.5;
        }
        100% {
          transform: translateY(100vh);
          opacity: 0;
        }
      }

      .binary {
        position: absolute;
        top: -10%;
        color: rgba(0, 255, 0, 0.7);
        font-family: monospace;
        font-size: 14px;
        animation: binaryRain linear infinite;
      }

      .event-card {
        background: rgba(25, 25, 25, 0.9);
        border: 1px solid #00ffcc;
        color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .event-card:hover {
        transform: scale(1.05);
        box-shadow: 0 0 15px #00ffcc;
      }

      .event-title {
        color: #00ffcc;
      }

      .event-link {
        color: #00ffcc;
        text-decoration: none;
      }

      .event-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <script>
      function createBinaryRain() {
        for (let i = 0; i < 50; i++) {
          let binary = document.createElement("div");
          binary.classList.add("binary");
          binary.innerHTML = Math.random() > 0.5 ? "0" : "1";
          binary.style.left = Math.random() * 100 + "vw";
          binary.style.animationDuration = Math.random() * 5 + 3 + "s";
          binary.style.animationDelay = Math.random() * 2 + "s";
          document.body.appendChild(binary);
        }
      }
      createBinaryRain();
    </script>

    <!-- Main Content -->
    <main class="container mx-auto p-4">
      <h2 class="text-3xl font-bold text-center mb-8 text-teal-400">Events</h2>

