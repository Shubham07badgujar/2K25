<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script>
  window.addEventListener("load", () => {
    var tl = gsap.timeline();
    gsap.from(".hero-text p", {
      x: -200,
      opacity: 0,
      duration: 1.5,
      ease: "circ.out",
    });

    gsap.from(".hero-text a", {
      x: 200,
      opacity: 0,
      duration: 1.5,
      ease: "circ.out",
    });

    document.querySelector(".hero-text p").addEventListener("mouseenter", () => {
      gsap.to(".hero-text p", {
        scale: 0.9,
        opacity: 1,
        ease: "circ.out",
      });
    })

    document.querySelector(".hero-text p").addEventListener("mouseleave", () => {
      gsap.to(".hero-text p", {
        scale: 1,
        opacity: 1,
        ease: "circ.out",
      });
    })

    document.querySelector(".hero-text a").addEventListener("mouseenter", () => {
      gsap.to(".hero-text a", {
        border: "2px solid black",
        backgroundImage: "linear-gradient(45deg, magenta, cyan, blue)",
        backgroundSize: "200% 200%",
        borderColor: "transparent",
        scale: 1.1,
        ease: "circ.out",
      });
    })

    document.querySelector(".hero-text a").addEventListener("mouseleave", () => {
      gsap.to(".hero-text a", {
        border: 0,
        background: "#73C7C7",
        borderColor: "white",
        color: "black",
        scale: 1,
        ease: "power2.out"
      });
    })



    tl.from(".section2 .elem1", {
      x: -400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem1",
        scroller: "body",
        start: "top 80%",
        end: "top 20%",
        scrub: 2,
      }
    })

    tl.from(".section2 .elem2", {
      x: 400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem2",
        scroller: "body",
        start: "top 90%",
        end: "top 20%",
        scrub: 2,
      }
    })


    tl.from(".section2 .elem3", {
      x: -400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem3",
        scroller: "body",
        start: "top 90%",
        end: "top 20%",
        scrub: 2,
      }
    })

    document.querySelectorAll(".section2 button").forEach(button => {
      button.addEventListener("mouseenter", () => {
        gsap.to(button, {
          border: "1px solid black",
          backgroundImage: "linear-gradient(45deg, magenta, cyan, blue)",
          backgroundSize: "200% 200%",
          borderColor: "transparent",
          scale: 1.1,
          ease: "power2.out"
        });
      });

      button.addEventListener("mouseleave", () => {
        gsap.to(button, {
          border: 0,
          background: "black",
          borderColor: "white",
          scale: 1,
          ease: "power2.out"
        });
      });
    });

  });


</script>

